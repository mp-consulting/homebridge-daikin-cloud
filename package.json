{
  "displayName": "Daikin Cloud",
  "platformname": "daikincloud",
  "name": "@mp-consulting/homebridge-daikin-cloud",
  "version": "1.3.6",
  "description": "Integrate with the Daikin Cloud to control your Daikin air conditioning via the cloud",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mp-consulting/homebridge-daikin-cloud.git"
  },
  "bugs": {
    "url": "https://github.com/mp-consulting/homebridge-daikin-cloud/issues"
  },
  "engines": {
    "node": ">=18.15.0",
    "homebridge": ">=1.5.0 || ^2.0.0-beta.0"
  },
  "main": "dist/src/index.js",
  "customUi": true,
  "customUiPath": "./homebridge-ui",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --max-warnings=0",
    "watch": "npm run build && npm link && nodemon",
    "build": "rimraf ./dist && tsc",
    "prepublishOnly": "npm run lint && npm run build",
    "release": "npm publish",
    "release:beta": "npm publish --tag beta"
  },
  "keywords": [
    "homebridge-plugin"
  ],
  "dependencies": {
    "@homebridge/plugin-ui-utils": "^1.0.3",
    "ws": "^8.19.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^24.0.0",
    "@types/ws": "^8.18.1",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.2",
    "hap-nodejs": "^1.1.0",
    "homebridge": "^2.0.0-beta.55",
    "homebridge-config-ui-x": "^5.15.0",
    "nodemon": "^3.1.11",
    "rimraf": "^6.1.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.1",
    "vitest": "^4.0.18"
  },
  "funding": {
    "type": "paypal",
    "url": "https://paypal.me/mickaelpalma"
  },
  "files": [
    "dist",
    "homebridge-ui",
    "config.schema.json"
  ]
}
